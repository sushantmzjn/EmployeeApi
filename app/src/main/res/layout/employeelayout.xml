<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F1C9C9">

    <androidx.cardview.widget.CardView
        android:layout_width="208dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="#ffffff"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <TextView
                android:id="@+id/ID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="ID : "
                android:textColor="#000000"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/idEmployee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/ID"
                android:hint="id"
                android:textColor="#000000"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/idEmployee"

                android:text="Name : "
                android:textColor="#000000"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/EmployeeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/idEmployee"
                android:layout_toRightOf="@+id/Name"
                android:hint="Name"
                android:textColor="#000000"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/Salary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/EmployeeName"
                android:text="Salary : "
                android:textColor="#000000"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/EmployeeSalary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/EmployeeName"
                android:layout_toRightOf="@id/Salary"
                android:hint="Salary"
                android:textColor="#000000"
                android:textSize="20dp" />


            <TextView
                android:layout_below="@+id/EmployeeSalary"
                android:id="@+id/age"
                android:text="Age : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/Age"
                android:layout_toRightOf="@+id/age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/EmployeeSalary"
                android:hint="Age"
                android:textColor="#000000"
                android:textSize="20dp" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>